<UserControl x:Class="Biblioteca.Controls.Totais"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Background="White">
        <materialDesign:Card Padding="32" Margin="16" Background="White">
            <StackPanel Margin="15 0 0 0">
                <TextBlock Text="Total de Companhias" Foreground="Black"/>
                <TextBlock Text="{Binding TotalCompanhias}" FontWeight="Bold" Foreground="Black" FontSize="20"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
